<div class="container">
  <h1>Welcome to bitly copycat!</h1>
  <h2>Type in your URL</h2>

  <form action="/urls" method="post">
    <label for="original_link">Feed me your link!</label>
      <input type="text" name="original_link"> <br>
    <input type="submit" value="Give me my link!">
  </form> 
  
  <table>
    <h3>Recently shortend URLs</h3>
    <tr><th>URLs</th><th>Click Count</th></tr><br>
      <% @all_urls.reverse.each do |each_url_set| %>
        <tr><td><%= each_url_set.original_link %></td>
            <td><%= each_url_set.click_count %></td>
        </tr>
        
      <% end %> 
  </table>
</div>
